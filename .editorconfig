# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{dart,yaml,yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.gradle]
indent_style = space
indent_size = 4

[*.kt]
indent_style = space
indent_size = 4

[*.swift]
indent_style = space
indent_size = 4
